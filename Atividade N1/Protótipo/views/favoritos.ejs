<!-- Header Section -->
<section class="header-section py-4 fade-in">
    <div class="container">
        <h1 class="mb-4">Meus Favoritos</h1>
        <p class="lead">Gerencie sua lista de animes favoritos</p>
    </div>
</section>

<!-- Filtros e Organização -->
<section class="filtros-section py-3 bg-light fade-in">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Buscar nos favoritos...">
                    <button class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-6 text-md-end mt-3 mt-md-0">
                <div class="btn-group">
                    <button class="btn btn-outline-primary active">
                        <i class="fas fa-th-large"></i> Grid
                    </button>
                    <button class="btn btn-outline-primary">
                        <i class="fas fa-list"></i> Lista
                    </button>
                </div>
                <select class="form-select d-inline-block ms-2" style="width: auto;">
                    <option>Ordenar por Nome</option>
                    <option>Data Adicionado</option>
                    <option>Avaliação</option>
                </select>
            </div>
        </div>
    </div>
</section>

